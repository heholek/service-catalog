{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "host": {
            "type": "string",
            "default": "unix:///var/run/docker.sock"
        },
        "api_version": {
            "type": "string",
            "default": "1.25"
        },
        "image": {
            "type": "string"
        },
        "command": {
            "type": "string"
        },
        "arguments": {
            "type":"array",
            "items": {
                "type": "string"
            }
        },
        "volumes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "environmentVariables": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "host",
        "api_version",
        "image",
        "command"
    ]
}
  